<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Кабинет массажа</title>
    <!-- Подключаем CDN ресурсы -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" integrity="sha384-tjCbcrlaJxBwcqDXYzCoNH2CJeCNac8pms7wdqvOTgU5GmHADDo50NgTFfbcZlhEwYD6" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqBD6Aj8nm6YwK39avw6Xo1WYCaqHSFaygpBdlDmrRwxRLCsdfn7xssQrwT5xzy" crossorigin="anonymous"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-md bg-dark navbar-dark">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Massage</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                    <ul class="navbar-nav">
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Massage" asp-action="Index">Наши услуги</a></li>
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Booking" asp-action="SelectTime">Выбор времени</a></li>
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Admin" asp-action="ManageServices">Администраторская панель</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="pb-3 container my-3">
        @RenderBody()
    </main>

    <footer class="border-top footer text-muted">
        <div class="container">
            © @DateTime.Now.Year - Кабинет массажа
        </div>
    </footer>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>